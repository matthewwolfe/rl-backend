{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./application/",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "./dist/",
        "removeComments": false,
        "resolveJsonModule": true,
        "rootDir": "./application/",
        "sourceMap": false,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        ".npm",
        "dist",
        "tests"
    ]
}
